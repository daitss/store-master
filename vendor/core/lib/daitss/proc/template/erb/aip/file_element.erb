<file ID='file-<%= df.id %>'
      OWNERID='<%= df.uri %>'
      ADMID='<%= @admid_map[df.id].join ' ' %>'
      SIZE='<%= df.size %>'
      CHECKSUMTYPE='SHA-1'
      <% if df.sip_descriptor? %>
        USE="sip descriptor"
      <% end %>
      CHECKSUM='<%= df.open { |io| Digest::SHA1.hexdigest io.read } %>'>
  <% unless df.obsolete? %>
    <FLocat LOCTYPE='URL' xlink:href="<%= URI.escape df['aip-path'] %>"/>
  <% end %>
</file>
