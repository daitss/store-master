!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %link{ :rel => "stylesheet", :href => "/site.css",  :type => "text/css"  }
    %link{ :rel => "shortcut icon",  :href => "/favicon.ico" }

    %title Search for Packages by IEID on #{@service_name}

  %body
    %h1
      %a{ :href => '/' }
        =@service_name
      &rArr; Search for Packages by IEID

    %form{ :class => "search", :method => "get", :action => "/search" }
      %label
        =@note
        %input{ :type => "text", :name => "pattern", :value => "#{@pattern}" }
            
    %table
      %thead
        %tr
          %th IEID
          %th Location
          %th Date
      %tbody
        %tr
          %td{ :colspan => 3 }
        - @packages.each do |pkg|
          %tr
            %td{ :colspan => 3,  :class => "tl" }
              - if url = inspection_url(pkg)
                %a{ :href => url }
                  %img{ :src =>  "/mag.png" }
              - else
                %img{ :src => "/no-mag.png" }
              %a{ :href => pkg.url } #{pkg.name}
          - pkg.copies.each do |cpy|
            %tr
              %td
              %td #{cpy.store_location}
              %td #{cpy.datetime.strftime('%F %T')}
          %tr
            %td{ :colspan => 3 }
                
    %p{ :class => "footer" }
      =@revision

      
